{% extends "layout.html.twig" %}
{% set PokeMenu = true %}

{% block title %}Pokemons{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if pokemons %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Nom pokemon</th>
                    <th>Catégorie</th>
                </tr>
            </thead>
            {% for pokemon in pokemons %}
                <tr>
                    <td><a href="/pokemons/{{ pokemon.id }}">{{ pokemon.namepokemon }}</a></td>
                    <td>{{ pokemon.type.label }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Aucun pokemon trouvé.</div>
{% endif %}   
{% endblock %}{# empty Twig template #}
